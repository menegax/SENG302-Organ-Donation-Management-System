<GridPane fx:id="userRegisterPane" prefHeight="400.0" prefWidth="600.0" styleClass="form" stylesheets="@../css/guiStyle.css" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.GUIUserRegister" style=" -fx-border-color:black; -fx-border-width: 1; -fx-border-style: solid;">
   <children>
      <Label fx:id="backButton" onMouseClicked="#goBackToLogin" styleClass="back" stylesheets="@../css/guiStyle.css" text="ã€±back">
         <GridPane.margin>
            <Insets left="10.0" />
         </GridPane.margin></Label>
      <GridPane GridPane.columnIndex="1" GridPane.rowIndex="2" GridPane.rowSpan="2">
         <children>
            <TextField fx:id="userIdRegister" focusTraversable="false" promptText="NHI Number">
               <GridPane.margin>
                  <Insets bottom="5.0" />
               </GridPane.margin></TextField>
            <TextField fx:id="firstnameRegister" focusTraversable="false" promptText="First name" GridPane.rowIndex="1">
               <GridPane.margin>
                  <Insets bottom="5.0" />
               </GridPane.margin></TextField>
            <TextField fx:id="lastnameRegister" focusTraversable="false" promptText="Last name" GridPane.rowIndex="3">
               <GridPane.margin>
                  <Insets bottom="5.0" />
               </GridPane.margin></TextField>
            <TextField fx:id="middlenameRegister" focusTraversable="false" promptText="Middle name(s)" GridPane.rowIndex="2">
               <GridPane.margin>
                  <Insets bottom="5.0" />
               </GridPane.margin></TextField>
            <DatePicker fx:id="birthRegister" editable="false" focusTraversable="false" prefHeight="40.0" prefWidth="998.0" promptText="Date of birth" GridPane.rowIndex="4">
               <GridPane.margin>
                  <Insets bottom="5.0" />
               </GridPane.margin></DatePicker>
            <ChoiceBox fx:id="regionRegister" disable="true" prefWidth="150.0" visible="false" GridPane.rowIndex="4" />
            <PasswordField fx:id="passwordTxt" disable="true" promptText="Password" visible="false" GridPane.rowIndex="4" />
            <PasswordField fx:id="verifyPasswordTxt" disable="true" promptText="Verify password" visible="false" GridPane.rowIndex="5" />
         </children>
         <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
         </columnConstraints>
         <rowConstraints>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
         </rowConstraints>
         <GridPane.margin>
            <Insets />
         </GridPane.margin>
      </GridPane>
      <Button fx:id="doneButton" mnemonicParsing="false" onAction="#register" prefHeight="25.0" prefWidth="90.0" styleClass="save-button" stylesheets="@../css/guiStyle.css" text="Done" GridPane.columnIndex="2" GridPane.rowIndex="4" />
      <GridPane GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="1">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <RadioButton fx:id="clinicianButton" mnemonicParsing="false" onAction="#onSelectClinician" text="Clinician" GridPane.columnIndex="1" GridPane.halignment="CENTER">
               <toggleGroup>
                  <ToggleGroup fx:id="usertype" />
               </toggleGroup>
            </RadioButton>
            <RadioButton fx:id="administratorButton" mnemonicParsing="false" onAction="#onSelectAdministrator" text="Administrator" toggleGroup="$usertype" GridPane.columnIndex="2" GridPane.halignment="LEFT" />
            <RadioButton fx:id="patientButton" mnemonicParsing="false" onAction="#onSelectPatient" selected="true" text="Patient" toggleGroup="$usertype" GridPane.halignment="RIGHT" />
         </children>
         <GridPane.margin>
            <Insets />
         </GridPane.margin>
      </GridPane>
   </children>
   <columnConstraints>
      <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
      <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
      <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints minHeight="0.0" vgrow="SOMETIMES" />
      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
   </rowConstraints>
</GridPane>
